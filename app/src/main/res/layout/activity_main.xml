<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a number below to find out if it is a triangular number, square number, or both!"
        android:id="@+id/intro"
        android:textSize="20sp"
        android:layout_marginStart="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/usersNumber"
        android:layout_below="@+id/intro"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Number"
        android:id="@+id/button"
        android:layout_below="@id/usersNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="testNumber" />

</RelativeLayout>
